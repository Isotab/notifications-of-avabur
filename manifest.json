{
  "manifest_version": 2,

  "name": "Notifications of Avabur",
  "description": "Notifies users of goings on in Relics of Avabur",
  "version": "1.0",

  "background": {"scripts": ["background.js"]},
  "content_scripts": [{
	"matches": ["*://avabur.com/*", "*://beta.avabur.com/*"],
	"js": ["lib/jquery-3.2.1.min.js", "src/eventNotifier.js"],
	"run_at": "document_end"
  }],
  "permissions": [
	"*://avabur.com/*",
    "activeTab",
	"background",
	"notifications",
    "storage"
  ]
}